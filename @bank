package bank;

import java.util.Scanner;

public class Home
{
    public static void main(String arg[])
    {
    System.out.println("a:Deposit");
    System.out.println("b:Create FD");
    System.out.println("c:Bank transfer");
    System.out.println("d:View balance");
    Scanner sc=new Scanner(System.in);
    String choice=sc.next();
    switch(choice)
    {
    case "a":
    System.out.println("Deposit");
    int c_n,ex,cvv,amount=0,otp;
        String name;
        System.out.println("Enter card details");
        System.out.println("Enter Card Number:");
        c_n=sc.nextInt();
        System.out.println("Enter expiry");
        ex=sc.nextInt();
        System.out.println("Enter CVV");
        cvv=sc.nextInt();
        System.out.println("Name on Card");
        name=sc.next();
        System.out.println("Enter Amount");
        amount=sc.nextInt();
        System.out.println("Enter OTP");
        otp=sc.nextInt();
        System.out.println("succesesful");
    break;
    case "b":
    System.out.println("Create FD");
    break;
    case "c":
    System.out.println("Bank transfer");
    int acc,acc_c,ifsc,amount1=0,pin;
      System.out.println("Enter the account details ");
      System.out.println("Enter account number:");
      acc=sc.nextInt();
      System.out.println("Confirm account number:");
      acc_c=sc.nextInt();
      System.out.println("Enter IFSC code:");
      ifsc=sc.nextInt();
      System.out.println("Enter Amount:");
      amount1=sc.nextInt();
      System.out.println("Enter your pin:");
      pin=sc.nextInt();
      System.out.println("Transaction completed");
    break;
    case "d":
    System.out.println("View balance");
    int c,b=80000;
            c=b+amount-amount1;
    break;
    default:
    System.out.println("invalid");
    }
    }
   
}
