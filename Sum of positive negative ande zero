//write a program to enter the numbers till the user wants and at the end
//it should display the count of positive ,negative and zeros entered
package demo;

import java.util.Scanner;

public class count
{
    public static void main(String args[])
    {
    int size=100;
int countP=0,countN=0,countZ=0,i;
    Scanner sc=new Scanner(System.in);
int[] arr=new int[size];
System.out.println("enter the size of array:");
size=sc.nextInt();
System.out.println("enter the numbers:");
for(i=0;i<=size;i++)

arr[i]=sc.nextInt();
for(i=0;i<=size;i++)
{
if(arr[i]>0)
countP++;
else if(arr[i]<0)
countN++;
else
countZ++;


}
    System.out.println("sum of positive number:"+countP);
    System.out.println("sum of negative number:"+countN);
    System.out.println("sum of zero number:"+countZ);
    }
}

